<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="border" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotPotato.HotPotatoController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Text>
   </top>
   <center>
      <TextArea prefHeight="100.0" prefWidth="223.0" text="Enter the names of the players playing&#10;(atleast 3). Then play the classic game&#10;of hot potato with a new automatic&#10;mode so you don't have to keep&#10;clicking." BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button mnemonicParsing="false" text="Close" BorderPane.alignment="CENTER" onAction="#buttonClickHandler"/>
   </bottom>
</BorderPane>
